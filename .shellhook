#!/usr/bin/env bash

if [ $(uname -s) = "Darwin" ]; then
    alias ls="ls --color=auto"
    alias ll="ls -l"
else
    alias open="xdg-open"
fi

if [ ! -d out/ ]; then
    mkdir out
fi

export WD=$(pwd)
export PYTHONPATH="${PYTHONPATH}:$WD/src"
export PYOPENCL_COMPILER_OUTPUT=0
alias flake8="flake8 --ignore E124,E128,E201,E203,E241,E402,W503,E722"
