#!/usr/bin/env bash

. ~/miniconda3/etc/profile.d/conda.sh

env=pycl
conda env list | grep $env >/dev/null
if (( ! $? == 0 )); then
    conda create \
        -n $env \
        -c conda-forge \
        python=3.7 cffi flake8 imageio numpy pyopencl
fi

# if [ ! $(uname -s) = "Darwin" ]; then
#     ln -f -s /etc/OpenCL/vendors ~/miniconda3/envs/$env/etc/OpenCL/vendors
# fi

conda activate $env
