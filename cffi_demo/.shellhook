#!/usr/bin/env bash

if [ ! -d futhark-pycffi/ ]; then
    git clone https://github.com/pepijndevos/futhark-pycffi.git
else
    cd futhark-pycffi/
    git pull
    cd ../
fi

if [ $(uname -s) = "Darwin" ]; then
    alias ls="ls --color=auto"
    alias ll="ls -l"
else
    alias open="xdg-open"
fi

# if [ ! $(uname -s) = "Darwin" ]; then
#     ln -f -s /etc/OpenCL/vendors ~/miniconda3/envs/$env/etc/OpenCL/vendors
# fi

export WD=$(pwd)
export PYTHONPATH="${PYTHONPATH}:$WD/futhark-pycffi:$WD/src"
alias flake8="flake8 --ignore E124,E128,E201,E203,E241,E402,W503,E722"
